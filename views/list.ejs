

<%- include("header") -%>
  <div class="box" id="heading">
    <h1><%= listTitle%></h1>
  </div>
<div class="box">
  <%for(var x =0; x<newIListItem.length; x++){%>

  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%=newIListItem[x]._id %>">
      <p><%=newIListItem[x].name%></p>
    </div>
  </form>  


  <%}%>

  
  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="btn" value=<%= listTitle%>>+</button>
  </form>
</div>
<%- include("footer") -%>
